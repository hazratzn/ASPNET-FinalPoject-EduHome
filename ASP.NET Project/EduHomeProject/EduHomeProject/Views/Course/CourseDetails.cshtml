@model CourseDetailsVM
@{
    ViewData["Title"] = "CourseDetails";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Model.CourseDetailsHeader.Title</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/Assets/img/course/@Model.CourseDetailsBody.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.CourseDetailsBody.Name</h2>
                        <p>@Model.CourseDetailsBody.Description </p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>@Model.CourseDetailsBody.About</h3>
                                <p>@Model.CourseDetailsBody.Description</p>
                            </div>
                            <div class="single-course-left">
                                <h3>@Model.CourseDetailsBody.Apply</h3>
                                <p>@Model.CourseDetailsBody.Description</p>
                            </div>
                            <div class="single-course-left">
                                <h3>@Model.CourseDetailsBody.Certificate</h3>
                                <p class="margin">@Model.CourseDetailsBody.Description</p>
                                <p>@Model.CourseDetailsBody.Description</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.CourseFeatures.Starts</span></li>
                                <li>duration <span>@Model.CourseFeatures.Duration</span></li>
                                <li>class duration <span>@Model.CourseFeatures.Duration</span></li>
                                <li>skill level <span>@Model.CourseFeatures.SkillLevel</span></li>
                                <li>language <span>@Model.CourseFeatures.Language</span></li>
                                <li>students <span>@Model.CourseFeatures.Students</span></li>
                                <li>assesments <span>@Model.CourseFeatures.Assesments</span></li>
                            </ul>
                            <h3 class="red">course fee ₼@Model.CourseFeatures.Price</h3>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var categories in Model.CourseCategories)
	                         {

                                <li><a href="#">@categories.Name (@categories.Count)</a></li>
	                         }
                            
                            
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/Assets/img/blog/@Model.CourseTheme.Image" alt="blog"></a>
                            @Html.Raw(Model.CourseTheme.Title)
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var lastpost in Model.CourseLastPost)
                        {
                            <div class="single-post">
                                <div class="single-post-img">
                                    <a href="blog-details.html">
                                        <img src="~/Assets/img/post/@lastpost.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a asp-controller="Blog" asp-action="BlogDetails">English Language Course for you</a></h4>
                                    <p>@lastpost.From /  @lastpost.Date</p>
                                </div>
                            </div>
                        }
                        


                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">

                            @foreach (var tags in Model.CourseTags)
                            {
                                <a asp-controller="Blog" asp-action="BlogDetails" class="mr-10 mb-10">@tags.Name</a>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
